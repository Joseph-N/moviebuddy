	text-transform: lowercase;
}

/* Styling for Autocomplete */

.ac_results{overflow:hidden;z-index:99999;margin:0;padding:0;}
.ac_results ul{list-style-position:outside;list-style:none;background:#f5f5f5;margin:0;padding:5px 0px 5px 0px;}
.ac_results li{cursor:pointer;display:block;overflow:auto;margin:0;padding:0;border-top:1px solid #e1e1e1;}
.ac_results li:first-child{border:0;}
.ac_loading{background-image:url('<%= asset_path("loader.gif") %>');background-position:97% center;background-repeat:no-repeat;}
.ac_over{background-color:#FFFFF0;color:#fb0}
.ac_over a:hover{color:#000}
.ac_results li a{display:block; overflow:auto; padding:6px; color:#2c3e50;}
.ac_results li a:hover{color:#ffffff;background-color:#2980b9; }
.ac_results li a img{width:54px; height:54px; max-height:64px;float:left; margin-right:10px;}
