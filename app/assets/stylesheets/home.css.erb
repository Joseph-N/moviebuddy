/* Recent movies */
.recent-movies {
    padding-left: 0;
    list-style: none;
    overflow: hidden;
    margin-bottom: 0;
}

.recent-movies > li {
    float: left;
    margin-bottom: 15px;
    width: 100%;
}

.recent-movies > li:last-child {
    margin-bottom: 0;
}

.recent-movies img {
    width: 92px;
    height: 138px;
    float: left;
    margin-right: 10px;
    -webkit-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

.recent-movies img:hover {
    opacity: 0.65;
    filter: alpha(opacity=65);
}

.recent-movies h5 {
    margin: 0;
    font-size: 12px;
}

.recent-movies h5 small {
    display: block;
    margin-top: 7px;
}

.recent-movies p {
	display: block;
	margin-top: 10px;
}

.col-md-5.item-details.v-ruler hr {
	margin: 5px 0px 5px 0px;
}