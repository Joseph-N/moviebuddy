<div class="media update-comm" id="comment_<%= update_comment.id %>">
     <%= link_to image_tag(update_comment.user.avator.url(:thumb), width: "50px", height: "50px"), user_show_path(update_comment.user), class: "pull-left" %>
    <div class="media-body">
        <h5 class="media-heading">
            <%= link_to update_comment.user.name, user_show_path(update_comment.user) %>
        </h5>
        <%= update_comment.content %>
        <br>
        <span class="comment-date">
        	<%= time_ago_in_words(update_comment.created_at) %> ago
        </span>
    </div>
</div>