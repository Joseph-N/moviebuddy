<% if @update.errors.any? %>
	<div class="alert alert-danger alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	    <strong>Oh noo!</strong>
	    <% @update.errors.full_messages.each do |msg| %>
			<p><%= msg %></p>
		<% end %>
	</div>
<% end %>

<%= form_for(@update, :html => {:role => 'form' }) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "What's the latest?...", class: "form-control", rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.submit "Post", class: "btn btn-flat btn-sm flat-inverse pull-right" %>
  </div>
<% end %>