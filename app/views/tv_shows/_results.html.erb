<% @tv_shows["results"].each do |show| %>
  <div class="col-md-12 col-sm-12 col-xs-12 wrapper-1">
    <div class="row">
      <div class="col-md-4 col-xs-5">
        <%= image_tag @tmdb.imageUrl('poster','w342', show["poster_path"]), class: 'img-responsive' %>
      </div>
      <div class="col-md-8 col-xs-7">
        <h5 class="subpage-title"><%= show["name"] %></h5>
        <p class="overview" id="<%= show['id'] %>">Loading....</p>
        <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-3 wrapper-3">
          <button type="button" id ="tv-show-<%= show['id'] %>" class="btn btn-primary btn-lg tv-show" data-id="<%= show['id'] %>">Add to collection</button>
        </div>
      </div>
        
      </div>
    </div>

  </div>
<% end %>
