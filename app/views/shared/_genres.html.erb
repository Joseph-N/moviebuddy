<h5 class="subpage-title">Genres</h5>
 <ul class="tagcloud-list portfolio-filter">
	<li class="active"><a href="#" data-filter="*">All</a></li>
        <% genres.each do |genre| %>
	        <% if genre.split.size > 1 %>
	            <li class=""><a href="#" data-filter=".<%= genre.split.join(".").downcase %>"><%= genre.capitalize %></a> </li>
	        <% else %>
	            <li class=""><a href="#" data-filter=".<%= genre.downcase %>"><%= genre.capitalize %></a></li>
	        <% end %>
    <% end %>
</ul>