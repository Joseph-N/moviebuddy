<% title "#{@user.name}'s Movies" %>

 <section id="page-title-wrapper" class="section page-title-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 page-title">
                <a href="javascript:history.go(-1)" id="ios-arrow-left">Back</a>                    
            </div>
            <!-- /.page-title -->
            <div class="col-xs-6 breadcrumb-wrapper">
                <h4 class="pull-right"> <%= @user.name.split(" ").first %>'s Movies</h4>
            </div>
            <!-- /.breadcrumb-wrapper -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>

<section id="portfolio-2" class="section colored-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <% if @movies.any? %>
                    <%= render :partial => 'shared/genres', locals: { genres: @genres } %>
                    <div class="wrapper-1">
                        <h5 class="subpage-title">Advertisement</h5>
                        <%= render 'shared/google_ads' %>
                    </div>
                <% end %>
            </div>
            <div class="col-md-9 v-ruler">
                <div id="isotope-portfolio-container">

                    <%= render @movies if @movies.any? %>

                </div>
                <div class="clearfix">
                    <%= paginate @movies %>
                </div>
            </div>
            <!-- /.isotope-portfolio-container -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>