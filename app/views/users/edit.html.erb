<% title "Change Password" %>

<section id="page-title-wrapper" class="section page-title-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 page-title">
              <h4>Edit Profile</h4>
            </div>
            <!-- /.page-title -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>

<section id="item-content-wrapper" class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 v-ruler-1">

                  <% if @user.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
              <strong>Oh noo!</strong>
              <% @user.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
          <% end %>
          <legend>Change your password</legend>
          <%= form_for(@user, :url => password_edit_path, :html => {:class => 'form-horizontal'} ) do |f| %>

            <div class="form-group">
              <%= f.label :current_password, :class =>"col-md-3" %>

              <div class="col-md-7">
                <%= f.password_field :current_password, :class => "form-control" %>
              </div> <!-- /.col -->

            </div> <!-- /.form-group -->


            <div class="form-group">
              <%= f.label "New Password", :class => "col-md-3" %> 

              <div class="col-md-7">
              <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %>
              </div> <!-- /.col -->

            </div> <!-- /.form-group -->


            <div class="form-group">
              <%= f.label "Confirm Password", :class =>"col-md-3" %>

              <div class="col-md-7">
              <%= f.password_field :password_confirmation, :class => "form-control" %>
              </div> <!-- /.col -->

            </div> <!-- /.form-group -->

            <div class="form-group">

              <div class="col-md-7 col-md-push-3">
              <%= f.submit "Update Password", :class => "btn btn-primary" %>
              <!-- /.col -->

             </div> <!-- /.form-group -->

          <% end %>
        </div>
      </div>

      <div class="col-md-4">
        <%= render 'shared/edit_links' %>
    </div>
  </div>
</section>
