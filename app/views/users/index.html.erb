<section id="page-title-wrapper" class="section page-title-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-3 col-md-6 page-title">
               <h4>Browse Users</h4>
            </div>

            <!-- /.page-title -->
            <div class="col-xs-6 col-sm-9 col-md-6">
                <% render :partial => 'shared/search_form' %>
            </div>
            <!-- /.breadcrumb-wrapper -->
        </div>
        <!-- /.row -->
    </div>
<!-- /.container -->
</section>

<section id="portfolio-2" class="section colored-wrapper">
    <div class="container">
        <!-- /.portfolio-filter -->
        <div class="row">
            <div id="content">
                 <% if notice %>
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <%= notice %>
                    </div>
                    <% elsif alert %>
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <%= alert %>
                    </div>
                <% end %>
                <div id="isotope-portfolio-container">
                    <%= render :partial => 'users', locals: { users: @users } %>  
                </div>
                <!-- /.isotope-portfolio-container -->
            </div>
            <!-- end content -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>





