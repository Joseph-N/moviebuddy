var s = jQuery;
s.noConflict();

s('#<%= @user.id %>.follow-unfollow').removeClass('flat-info').addClass('flat-danger').
attr('href', '<%= escape_javascript(user_unfollow_path(id: @user.id)) %>').
text('UNFOLLOW');

if(s('#user-stats').size() > 0 ){
	s('#user-stats').html('<%= escape_javascript(render(:partial => "user_stats",  locals: {user: @user }))%>');
}