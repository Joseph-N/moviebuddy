<% title "#{@user.name} Followers" %>

 <section id="page-title-wrapper" class="section page-title-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 page-title">
                <% if @user == current_user %>
                    <h4>Your Followers</h4>
                <% else %>
                    <h4><%= @user.name %>'s Followers</h4>
                <% end %>
            </div>
            <!-- /.page-title -->
            <div class="col-xs-6 hidden-xs breadcrumb-wrapper">
            </div>
            <!-- /.breadcrumb-wrapper -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
<section id="portfolio-2" class="section colored-wrapper">
    <div class="container">
        <div class="row">
            <div id="isotope-portfolio-container">
                <%= render :partial => 'users', locals: { users: @followers } %>            	
            </div>
            <!-- /.isotope-portfolio-container -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>