<!DOCTYPE html>
<html>
<head>
  <title>MovieBuddy</title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic|Montserrat:400,700", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
</head>
<body>
        <div id="main-wrapper" class="color-skin-3">
            <header id="header-1" class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8 header-info-wrapper">
                            <ul class="list-inline">
                                <li><i class="icon-film"></i>
                                    Movie will solve all of your troubles!!
                                </li>
                            </ul>
                            <!-- /.list-inline -->
                        </div>
                        <!-- /.header-info-wrapper -->
                        <div class="col-xs-12 col-sm-4 social-link-wrapper">
                            <ul class="social-links">
                                <li><a href="https://www.facebook.com/Your.Movie.Buddy" target="_blank"><i class="icon-facebook"></i></a></li>
                                <li><a href="https://plus.google.com/b/115556272872532573673/?hl=en" target="_blank"><i class="icon-google-plus"></i></a></li>
                                <li><a href="#"><i class="icon-twitter"></i></a></li>
                            </ul>
                            <!-- /.social-links -->
                        </div>
                        <!-- /.social-link-wrapper -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container -->
            </header>
                        <!-- /.header-1 -->
            <header id="header-2" class="header">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="container">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            </button>
                            <%= link_to raw("Movie<span>Buddy.</span>"), root_path, class: "navbar-brand" %>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav pull-right">
                            	<% if user_signed_in? %>
                            	<li><%= link_to raw("<i class='icon-facetime-video'></i> My Movies"), movies_path %></li>
                            	<li><%= link_to raw("<i class='icon-user'></i> " + current_user.name), user_show_path(current_user) %></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cogs"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><%= link_to raw("<i class='icon-edit'></i> Edit Profile"), edit_user_registration_path %></li>
                                        <li><%= link_to(raw("<i class='icon-signout'></i> Log Out"),  destroy_user_session_path, method: :delete)  %></li>
                                    </ul>
                                </li>
                            	
                            	<% else %>
                                <li><%= link_to(raw("<i class='icon-signin'></i> Sign in"), new_user_session_path)  %></li>
          						<li><%= link_to(raw("<i class='icon-collapse-top'></i> Sign up"), new_user_registration_path)  %></li> 
                                <% end %>                      
                            </ul>
                            <!-- /.nav -->
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                    <!-- /.container -->
                </nav>
                <!-- /.navbar -->
            </header>
            <!-- /#header-2 -->

            	<!-- <p class="notice"><% notice %></p>
       <p class="alert"><%=alert %></p> -->


<%= yield %>

