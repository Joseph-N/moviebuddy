<% title "Create Account" %>

<% content_for(:meta_tags) do %>
  <meta name="description" content="MovieBuddy is a fun app that helps you save and organise your favourite movies while engaging with friends to discover interesting Movies.">
<% end %>

<% content_for(:head) do %>
  <script>
  if(s(window).width() > 992){
    s(window).load(function(){
      var bg_image = '<%= @image %>';
      if(bg_image){
        s('.loading-gif').show();
      
        var img = new Image();
        s(img).load(function() {
          s(".section.colored-wrapper.b").css({
            "background-image" : "url("+ bg_image + ")",
            "background-repeat" : "no-repeat"
          });
          
          s('.loading-gif').hide();
        });

        img.src = bg_image;
      }
      else{
        console.log("No backdrop");
      }
    });
  }
  </script>
<% end %>

<!-- /.fullwidthbanner-container -->
<section id="our-services" class="section colored-wrapper b">
  <div class="container">
    <div class="row">
      <div class="col-md-5">   
        <div class="loading-gif" style="text-align: center; display: none;">
          <%= image_tag "ajax-loader-3.gif" %><br />
          Waiting for image..
        </div>             

      </div>

      <div class="col-md-7">
        <div class="register-login">
          <div class="cool-block">
            <div class="cool-block-bor"> 
             <div class="row">
              <div class="col-md-6">
                  <h4><i class="icon-double-angle-down"></i></h4>

                    <div class="row">
                      <%= render 'shared/social_links' %>
                    </div>

                    <h4><i class="icon-double-angle-down"></i></h4>

                <div class="clearfix"></div>
                <div class="row" style="text-align: center">
                <small><b>Have an account?</b> <%= link_to "Sign In", new_user_session_path, class: "home" %></small>
              </div>
                                  <div class="hidden-lg hidden-md">
                      <h4>OR</h4>
                    </div>
              </div>
              <div class="col-md-6 v-ruler">
                <h3><i class="icon-user"></i> Create Account</h3>

              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role=>"form"}) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, :class=> 'form-control', :autofocus => true %>
                </div>

                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, :class=> 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, :class=> 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, :class=> 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.submit 'Register now', class: "btn btn-flat flat-inverse btn-block"%>
                </div>


              <% end %>  

              </div>
             </div>         
                         
            </div>
          </div>   
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
<!-- /.container -->
</section>
<%= render :partial => 'shared/recent_movies', locals: { size: "w300"} %>
