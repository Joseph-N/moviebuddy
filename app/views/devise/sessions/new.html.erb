<% title "Sign In" %>

<% content_for(:meta_tags) do %>
    <meta name="msvalidate.01" content="593D3D6367D78FCDDEF84B0593DFF7BF" />
    <meta name="description" content="Movie Buddy helps you save and organise your favorite movies while engaging you with friends to discover interesting Movies. Sign up today!">
<% end %>

<% content_for(:head) do %>
  <script>
  if(s(window).width() > 992){
    s(window).load(function(){
      var bg_image = '<%= @image %>';
      if(bg_image){
        s('.loading-gif').show();
      
        var img = new Image();
        s(img).load(function() {
          s(".section.colored-wrapper.b").css({
            "background-image" : "url("+ bg_image + ")",
            "background-repeat" : "no-repeat"
          });
          
          s('.loading-gif').hide();
        });

        img.src = bg_image;
      }
      else{
        console.log("No backdrop");
      }
    });
  }
  </script>
<% end %>

<!-- /.fullwidthbanner-container -->
<section id="our-services" class="section colored-wrapper b">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="loading-gif" style="text-align: center; display: none;">
          <%= image_tag "ajax-loader-3.gif" %><br />
          Waiting for image..
        </div>                           
      </div>

    <div class="col-md-5">
      <div class="register-login">
         <div class="cool-block">
            <div class="cool-block-bor">            
              <h3><i class="icon-user"></i> Log in to your account</h3>

              <% if alert %>
                <div class="alert alert-danger alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                  <strong>Oh snap!</strong>
                  <%= alert %>
                </div>
              <% end %>

              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role=>"form"}) do |f| %>                      
               
               
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, :class=> 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, :class=> 'form-control' %>
                </div>

                <div class="form-group">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                  <% end -%>
                  <%= link_to raw("<i class='icon-info-sign'></i> Forgot Password?"), new_password_path(resource_name), class: "pull-right home" %>
                </div>

                <div class="form-group">
                  <%= f.submit 'Sign In', class: "btn btn-flat flat-inverse btn-block"%>
                </div>

                <div class="clearfix"></div>
                <h4>OR</h4>

                <div class="row">
                  <div class="col-xs-12 col-sm-4 col-md-6 space">
                    <%= link_to image_tag("transparent.gif", class: "signin-facebook"), user_omniauth_authorize_path(:facebook) %>
                  </div>

                  <div class="col-xs-12 col-sm-4 col-md-6 space">
                    <%= link_to image_tag("transparent.gif", class: "signin-twitter"), user_omniauth_authorize_path(:twitter) %>
                  </div>

                  <div class="col-xs-12 col-sm-4 col-md-12 space">
                    <%= link_to image_tag("transparent.gif", class: "signin-google"), user_omniauth_authorize_path(:google_oauth2) %>
                  </div>
                </div>
                <div class="row">
                  <h4>OR</h4>
                  <div class="col-md-12">
                    <%= link_to 'Create Account', new_user_registration_path , class: "btn btn-flat flat-inverse btn-block"%>
                  </div>
                </div>
              <% end %>               
            </div>
         </div>   
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->
</section>
<%= render :partial => 'shared/recent_movies', locals: { size: "w300"} %>
